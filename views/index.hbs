<html>

    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </head>

    <body>





        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <h1>My Adressbook</h1>

                <a class="btn btn-default" href="/edit">Neu</a>

                <table class="table table-striped table-hover">

                    <thead>
                        <tr>
                            <th>Vorname</th>
                            <th>Nachname</th>
                            <th>Telefon</th>
                            <th>E-Mail</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                        {{#each addr}}
                            <tr>
                                <td>{{this.firstname}}</td>
                                <td>{{this.lastname}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.email}}</td>
                                <td><a href="/edit/{{this.id}}"><span class="glyphicon glyphicon-pencil"></span></a></td>
                                <td><a href="/delete/{{this.id}}"><span class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>
            <div class="col-md-2"></div>
        </div>
    </body>

</html>