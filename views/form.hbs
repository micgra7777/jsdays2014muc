<html>

    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </head>

    <body>
        <div class="row">

            <div class="col-md-2"></div>
            <div class="col-md-8">

                {{#if id}}
                    <h1>Edit Address</h1>
                {{else}}
                    <h1>Create Address</h1>
                {{/if}}

                <form class="form-horizontal" action="/edit" method="post" role="form">
                    <input type="hidden" id="id" name="id" value="{{id}}">

                    <div class="form-group">
                        <label for="firstname" class="col-sm-2 control-label">Vorname:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="firstname" name="firstname" value="{{firstname}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="lastname" class="col-sm-2 control-label">Nachname:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="lastname" name="lastname" value="{{lastname}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone" class="col-sm-2 control-label">Telefon:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="phone" name="phone" value="{{phone}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="col-sm-2 control-label">E-Mail:</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="email" name="email" value="{{email}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="submit" value="speichern">
                    </div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
    </body>

</html>